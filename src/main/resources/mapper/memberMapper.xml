<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.teamProject.ezmeal.dao.MemberMapper">
    <select id="select" parameterType="int" resultType="MemberDto">
        SELECT *
        from tb_member
        where lgin_id = #{lgin_id}
    </select>

    <select id="selectAll" resultType="MemberDto">
        SELECT *
        from tb_member
    </select>

    <insert id="insert" parameterType="MemberDto">
        insert into TB_MEMBER(
                              mbr_id
                              ,name
                              ,role
                              ,sex
                              ,phone
                              ,lgin_id
                              ,lgin_pw
                              ,rcmdr_cd
                              ,acct_now_stus
                              ,mbr_grd
                              ,mbr_subs_agre
                              ,usg_terms
                              ,psnlinfo_usg_yn
                              ,age_14_over_yn
                              )
        values (
                #{mbr_id}
               ,#{name}
               ,10
               ,#{sex}
               ,#{phone}
               ,#{lgin_id}
               ,#{lgin_pw}
               ,#{rcmdr_cd}
               ,#{acct_now_stus}
               ,'AP01'
               ,#{mbr_subs_agre}
               ,#{usg_terms}
               ,#{psnlinfo_usg_yn}
               ,#{age_14_over_yn}
               )
    </insert>

</mapper>